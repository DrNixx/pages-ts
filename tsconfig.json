{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES2016",
        "module": "commonjs",
        "lib": ["DOM", "ES2016", "DOM.iterable"],
        "jsx": "react",
        "esModuleInterop":true,
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "importHelpers": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./lib"
    },
    "include": [
        "src/**/*"
    ],
    "files": [
        "src/index.ts",
        "src/index-jquery.ts"
    ]
}